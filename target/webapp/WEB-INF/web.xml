<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>Home Page</servlet-name>
        <servlet-class>servlets.HomePage</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Home Page</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home Page</servlet-name>
        <url-pattern>/home/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Header App</servlet-name>
        <servlet-class>servlets.HeaderApp</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Header App</servlet-name>
        <url-pattern>/headers/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Header App</servlet-name>
        <url-pattern>/headers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logging Service</servlet-name>
        <servlet-class>servlets.LoggingService</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Logging Service</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>